<h1><%= @topic.title %></h1>

<% if policy(@topic).update? %>
  <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-primary' %>
<% end %>
<% if policy(Bookmark.new).create? %>
  <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
<% end %>
<% if policy(@topic).destroy? %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <%= render partial: 'bookmarks/bookmark', collection: @bookmarks %>
  </div>
</div>
